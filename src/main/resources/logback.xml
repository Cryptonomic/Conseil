<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

    <shutdownHook class="ch.qos.logback.core.hook.DelayingShutdownHook" delay="5 seconds"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="ch.qos.logback.classic.PatternLayout">
                <Pattern>%d{HH:mm:ss.SSS} %-53([%thread] %-5level) %-36logger{36} - %msg%n</Pattern>
            </layout>
        </encoder>
    </appender>

    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="STDOUT" />
    </appender>

    <logger name="com.base22" level="TRACE"/>
    <logger name="de.flapdoodle.embed.process" level="OFF"/>
    <logger name="tech.cryptonomic.conseil.tezos.BlocksDataFetchers" level="WARN"/>
    <logger name="tech.cryptonomic.conseil.tezos.AccountsDataFetchers" level="WARN"/>

    <root level="INFO">
        <appender-ref ref="ASYNC" />
    </root>

</configuration>